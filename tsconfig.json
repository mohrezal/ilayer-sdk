{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "bundler",
    "module": "esnext",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
