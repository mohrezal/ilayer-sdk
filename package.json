{
  "name": "@ilayer/sdk",
  "version": "0.0.2",
  "description": "iLayer sdk",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/index.html",
    "format": "prettier -w .",
    "demo:rfq": "ts-node scripts/rfq-demo.ts"
  },
  "files": [
    "dist",
    "abi",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*",
    "./abi/*": "./dist/abi/*.js"
  },
  "author": "iLayer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "viem": "^2.x.x"
  },
  "dependencies": {
    "@layerzerolabs/lz-v2-utilities": "^3.0.120",
    "pusher-js": "^8.4.0"
  }
}
